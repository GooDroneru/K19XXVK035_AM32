{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Read CFGWORD via OpenOCD",
        "type": "shell",
        "command": "openocd",
        "args": [
          "-f", "scripts/connect_stlink.cfg",
          "-c", "k1921vk035 read nvr 0xC00",
          "-c", "resume",
          "-c", "exit"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": []
      },
      {
        "label": "Write CFGWORD NvrLoad via OpenOCD",
        "type": "shell",
        "command": "openocd",
        "args": [
          "-f", "scripts/connect_stlink.cfg",
          "-c", "halt",
          "-c", "k1921vk035 write nvr erase 0xC00 0xFFFFFFEF 0xFFFFFFFF",
          "-c", "resume",
          "-c", "exit"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": []
      },
      {
        "label": "Reset",
        "type": "shell",
