        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": []
      },
      {
        "label": "Full Flash Erase (SERVCTL)", //SERV PIN
        "type": "shell",
        "command": "openocd",
        "args": [
          "-f", "scripts/connect_stlink.cfg",
          "-c", "halt",                      
          "-c", "mmw 0x40040014 0x00000001 0xFFFFFFFF", 
          "-c", "resume",                   
          "-c", "sleep 1000",            
          "-c", "exit"                    
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": []
      }
    ]
  }